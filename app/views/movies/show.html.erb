<h1>作品詳細</h1>
<%= link_to "戻る", :back %>

<h2>作品名<%= @movie.name %></h2><br>
<h2>公開年<%= @movie.year %></h2><br>
<h2>概要<%= @movie.description %></h2><br>
<h2>画像<%= image_tag @movie.image_url %></h2><br>
<h2>上映中か<%= @movie.is_showing == true ? '上映中' : '上映予定' %></h2><br>
<h2>作成日時<%= @movie.created_at %></h2><br>
<h2>更新日時<%= @movie.updated_at %></h2><br>
<% @schedules.each do |schedule| %>
<%= schedule.start_time %>
<%= schedule.end_time %>
<% end %>
<%= form_with url: "/movies/#{@movie.id}/reservation", local: true, method: :get do |f| %>
<%= f.date_select :date %>
<%= f.collection_select :schedule_id, @schedules, :id, ->(schedule) { "#{schedule.start_time} - #{schedule.end_time}" } %>
<%= f.submit '座席を予約する' %>
<% end %>
