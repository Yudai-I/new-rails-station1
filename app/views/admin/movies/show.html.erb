<h1>作品詳細</h1>
<table>
<tr>
<th>作品名</th>
<th>公開年</th>
<th>概要</th>
<th>画像</th>
<th>上映中か</th>
</tr>

<tr>
<td><%= @movie.name %></td>
<td><%= @movie.year %></td>
<td><%= @movie.description %></td>
<td><%= image_tag @movie.image_url %></td>
<td><%= @movie.is_showing == true ? '上映中' : '上映予定' %></td>
<td><%= link_to 'スケジュール作成',  new_admin_movie_schedule_path(@movie) %></td>
</tr>
</table>

<h2>ス<%="#{@movie.name}" %>の スケジュール一覧</h2>
<table>
<% @schedules.each do |schedule| %>
    <tr>
      <td><%= schedule.movie_id %></td>
      <td><%= link_to "#{schedule.movie.name}", admin_schedule_path(schedule.id) %></td>
      <td><%= schedule.schedule_date %></td>
      <td><%= schedule.start_time.strftime('%H:%M') + "～" + schedule.end_time.strftime('%H:%M') %></td>
      <td><%= link_to "スケジュール詳細", admin_schedule_path(@movie.id) %></td>
      <td><%= link_to 'スケジュール削除', admin_schedule_path(schedule.id), method: :delete %></td>
    </tr>
  <% end %>
</table>